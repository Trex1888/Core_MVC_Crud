@model List<Product>

<h2 class="text-center mb-5">List of Products</h2>

<div class="row mb-3">
    <div class="col text-right">
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">New Product</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Price</th>
                <th>Image</th>
                <th>Created At</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Brand</td>
                    <td>@item.Category</td>
                    <td>@item.Price.ToString("C")</td>
                    <td><img src="/products/@item.ImageFileName" alt="@item.Name" class="img-fluid" width="100" height="100" /></td>
                    <td>@item.CreatedAt.ToString("MM/dd/yyyy")</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-sm btn-primary mr-2" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Products" asp-action="Delete" 
                            asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to remove?')">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>